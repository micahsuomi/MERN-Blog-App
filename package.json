  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "elliptic": "^6.5.3",
    "express": "^4.17.1",
    "http-proxy": "^1.18.1",
    "mongoose": "^5.9.21",
    "node-forge": "^0.10.0",
    "object-path": "^0.11.5",
    "prettier": "^2.1.2",
    "serialize-javascript": "^3.1.0"
  }
}
